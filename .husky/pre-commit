#!/usr/bin/env sh

echo "ğŸ” Running linting for React app..."
yarn lint

if [ $? -ne 0 ]; then
  echo "âŒ React linting failed! Commit aborted."
  exit 1
fi

echo "âœ… React linting passed!"

echo "ğŸ” Running linting in cf-worker directory..."
cd cf-worker && yarn lint

if [ $? -ne 0 ]; then
  echo "âŒ CF Worker linting failed! Commit aborted."
  exit 1
fi

echo "âœ… CF Worker linting passed!"

echo "ğŸ§ª Running tests in cf-worker directory..."
yarn test

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Commit aborted."
  exit 1
fi

cd .. && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/budget-management.spec.ts && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/transactions-balances.spec.ts && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/expense-management.spec.ts && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/auth.spec.ts
if [ $? -ne 0 ]; then
  echo "âŒ E2E Tests failed! Commit aborted."
  exit 1
fi
echo "âœ… All tests passed! Proceeding with commit."
