#!/usr/bin/env sh

echo "🎨 Running Biome formatting..."
yarn biome format --write .

if [ $? -ne 0 ]; then
  echo "❌ Biome formatting failed! Commit aborted."
  exit 1
fi

echo "✅ Biome formatting completed!"

echo "🔍 Running linting for React app..."
yarn lint

if [ $? -ne 0 ]; then
  echo "❌ React linting failed! Commit aborted."
  exit 1
fi

echo "✅ React linting passed!"

echo "🔍 Running linting in cf-worker directory..."

# Run biome lint and capture exit code
yarn biome lint --error-on-warnings cf-worker/src/
BIOME_EXIT_CODE=$?

if [ $BIOME_EXIT_CODE -ne 0 ]; then
  echo "❌ Biome linting failed! Commit aborted."
  exit 1
fi

# Run TypeScript check
cd cf-worker && yarn tsc --noEmit
TSC_EXIT_CODE=$?

if [ $TSC_EXIT_CODE -ne 0 ]; then
  echo "❌ TypeScript check failed! Commit aborted."
  exit 1
fi

echo "✅ CF Worker linting passed!"

echo "🧪 Running tests in cf-worker directory..."
yarn test

if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Commit aborted."
  exit 1
fi

# Check if RUN_E2E_TESTS environment variable is set to run e2e tests
if [ "${RUN_E2E_TESTS}" = "true" ]; then
  echo "🎭 Running E2E tests..."
  cd .. && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/budget-management.spec.ts && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/transactions-balances.spec.ts && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/expense-management.spec.ts && yarn playwright test --project=chromium --workers=1 --reporter=list,html --trace=on -- src/e2e/tests/auth.spec.ts
  if [ $? -ne 0 ]; then
    echo "❌ E2E Tests failed! Commit aborted."
    exit 1
  fi
  echo "✅ All tests passed! Proceeding with commit."
else
  echo "⏭️  Skipping E2E tests (set RUN_E2E_TESTS=true to enable)"
  echo "✅ Unit tests passed! Proceeding with commit."
fi
