{
	"name": "split-expense-worker",
	"version": "1.0.0",
	"description": "Cloudflare Worker for Split Expense App",
	"main": "src/index.ts",
	"scripts": {
		"dev": "wrangler dev",
		"build:ui": "cd .. && yarn build",
		"clean:redirects": "node -e \"require('fs').writeFileSync('../build/_redirects', '')\"",
		"deploy:dev": "yarn build:ui && yarn clean:redirects && vitest run && wrangler deploy -e dev",
		"deploy:prod": "yarn build:ui && yarn clean:redirects && vitest run && wrangler deploy -e prod",
		"build": "wrangler publish --dry-run",
		"test": "yarn clean:redirects && vitest run --no-file-parallelism",
		"test:coverage": "yarn clean:redirects && vitest run --no-file-parallelism --coverage",
		"test:coverage:ui": "yarn clean:redirects && vitest run --no-file-parallelism --coverage --coverage.reporter=html && open coverage/index.html",
		"test:watch": "yarn clean:redirects && vitest --no-file-parallelism",
		"test:watch:coverage": "yarn clean:redirects && vitest --no-file-parallelism --coverage",
		"lint": "tsc --noEmit && biome lint src/",
		"lint:fix": "biome lint --write src/",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "drizzle-kit studio --config=drizzle.config.local.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply splitexpense-dev --local",
		"db:migrate:dev": "wrangler d1 migrations apply splitexpense-dev -e dev --remote",
		"db:migrate:prod": "wrangler d1 migrations apply splitexpense -e prod --remote",
		"db:push:dev": "drizzle-kit push --config=drizzle.config.local.ts",
		"db:introspect": "drizzle-kit pull"
	},
	"keywords": [
		"cloudflare",
		"worker",
		"typescript",
		"expense",
		"split"
	],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@cloudflare/vitest-pool-workers": "^0.8.57",
		"@vitest/coverage-istanbul": "^3.2.4",
		"@vitest/runner": "^3.2.4",
		"@vitest/snapshot": "^3.2.4",
		"better-sqlite3": "^12.2.0",
		"drizzle-kit": "^0.31.4",
		"typescript": "^5.3.3",
		"vitest": "^3.2.4",
		"wrangler": "^4.26.0"
	},
	"dependencies": {
		"@better-auth/cli": "^1.3.4",
		"@types/node": "^24.1.0",
		"better-auth": "^1.3.4",
		"drizzle-orm": "^0.44.3",
		"split-expense-shared-types": "workspace:*",
		"ulid": "^3.0.1",
		"zod": "^4.0.0"
	},
	"packageManager": "yarn@4.5.0"
}
