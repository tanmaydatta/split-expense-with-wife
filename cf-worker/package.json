{
  "name": "split-expense-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for Split Expense App",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build:ui": "cd .. && yarn build",
    "clean:redirects": "> ../build/_redirects",
    "deploy:dev": "yarn build:ui && yarn clean:redirects && vitest run && wrangler deploy -e dev",
    "deploy:prod": "yarn build:ui && yarn clean:redirects && vitest run && wrangler deploy -e prod",
    "build": "wrangler publish --dry-run",
    "test": "vitest run",
    "lint": "tsc --noEmit && eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "typescript",
    "expense",
    "split"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.57",
    "@cloudflare/workers-types": "^4.20240403.0",
    "@eslint/js": "^9.31.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/runner": "^3.2.4",
    "@vitest/snapshot": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.26.0"
  },
  "dependencies": {
    "@types/node": "^22.9.0",
    "eslint": "^9.31.0"
  },
  "packageManager": "yarn@4.5.0"
}
